            <channel id="facadeEvent" typeId="facadeEvent" />
            <channel id="bearing" typeId="bearing" />
            <channel id="side" typeId="side" />
        </channels>

        <config-description-ref uri="thing-type:facade:config" />
    </thing-type>

</thing:thing-descriptions>